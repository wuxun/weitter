<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.wuxun.weitter.mapper.UserMapper">

 	<select id="getUserById" resultType="me.wuxun.weitter.data.User"
		parameterType="int">
		select id id, name name, password password from user where id=#{value}
	</select>
	
 	<select id="getUserByName" resultType="me.wuxun.weitter.data.User" parameterType="java.lang.String">
		select id id, name name, password password from user where name=#{value}
	</select>

	<insert id="insert" parameterType="me.wuxun.weitter.data.User">
		insert into user (name, password) 
		values (#{name}, #{password})
	</insert>
</mapper>